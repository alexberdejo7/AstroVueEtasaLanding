</div>


<div class="grid p-3 grid-cols-1 gap-11 mx-auto overflow-hidden md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mb-5 mt-10">
    {services.map(card => (
        <div class=" bg-slate-900 border w-60 h-50 border-yellow-600 shadow-md
         shadow-etasa hover:bg-gray-950 rounded-xl overflow-hidden 
         mx-auto transition-transform duration-300 ease-in-out hover:-translate-y-2">
            <a href={card.link}>
               
            </a>
            <div class="p-3" >
               
                 <h3 class="text-sm lg:text-md font-raleway xl:text-xl font-extrabold text-center text-etasa group-hover:text-yellow-600 mb-2">{card.titulo}</h3>
                 
                

                <hr class="border border-etasa mb-2">
                <p class="text-xs lg:text-sm font-raleway font-light text-center text-white group-hover:text-gray-200">{card.descripcion}</p>
            </div>
        </div>
    ))}
</div>

</section>